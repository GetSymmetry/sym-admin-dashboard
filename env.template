# Symmetry Admin Dashboard Environment Variables
# Copy this to .env.local and fill in your values

# ===========================================
# APP CONFIGURATION
# ===========================================

# Public URL for the app (used for internal API calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# AZURE SERVICE PRINCIPAL (Required)
# ===========================================
# Create via: az ad sp create-for-rbac --name "sym-admin-dashboard" --role Reader --scopes /subscriptions/{sub-id}

AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================

# PostgreSQL connection string
# Get via: az keyvault secret show --vault-name kv-sym-prod-centralus --name DATABASE-URL --query value -o tsv
PROD_DATABASE_URL=

# App Insights workspace ID
# Get via: az monitor log-analytics workspace show -n log-asp-sym-prod-centralus -g rg-sym-prod-centralus --query customerId -o tsv
PROD_APP_INSIGHTS_WORKSPACE_ID=

# Azure resource names
PROD_RESOURCE_GROUP=rg-sym-prod-centralus
PROD_APP_INSIGHTS=ai-asp-sym-prod-centralus
PROD_SERVICE_BUS=sb-sym-prod-centralus

# ===========================================
# TEST ENVIRONMENT
# ===========================================

# PostgreSQL connection string
# Get via: az keyvault secret show --vault-name kv-sym-test-centralus --name DATABASE-URL --query value -o tsv
TEST_DATABASE_URL=

# App Insights workspace ID
# Get via: az monitor log-analytics workspace show -n log-asp-sym-test-centralus -g rg-sym-test-centralus --query customerId -o tsv
TEST_APP_INSIGHTS_WORKSPACE_ID=

# Azure resource names
TEST_RESOURCE_GROUP=rg-sym-test-centralus
TEST_APP_INSIGHTS=ai-asp-sym-test-centralus
TEST_SERVICE_BUS=sb-sym-test-centralus

# ===========================================
# AZURE OPENAI (for AI Chat feature)
# ===========================================

AZURE_OPENAI_RESOURCE=
AZURE_OPENAI_RG=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# ===========================================
# OPTIONAL: LLM Pricing (per 1M tokens)
# ===========================================

LLM_INPUT_PRICE=0.15
LLM_OUTPUT_PRICE=0.60
